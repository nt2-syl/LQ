{# views/blog/home_blog/views-view-fields--blog--home-blog.html.twig #}
<div class="content-blog-item col-lg-9 col-lg-offset-3 col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
	<div class="title-blog col-lg-10 col-md-10 col-sm-10  col-xs-9">
	  <a href="{{ fields.path.content|render|striptags|trim }}">{{ fields.title.content }} </a>
      {% for auteur in auteurs %}
        {% set individu = drupal_entity('node', auteur.field_individu.0.target_id) %}
        {{ drupal_link(individu['#node'].label, 'node/' ~ individu['#node'].id) }}
      {% endfor %}
		{% for field in fields -%}
		  {{ field.separator }}
		  {%- if field.wrapper_element -%}
		    <{{ field.wrapper_element }}{{ field.wrapper_attributes }}>
		  {%- endif %}
		  {%- if field.label -%}
		    {%- if field.label_element -%}
		      <{{ field.label_element }}{{ field.label_attributes }}>{{ field.label }}{{ field.label_suffix }}</{{ field.label_element }}>
		    {%- else -%}
		      {{ field.label }}{{ field.label_suffix }}
		    {%- endif %}
		  {%- endif %}
		  {%- if field.element_type -%}
		    <{{ field.element_type }}{{ field.element_attributes }}>{{ field.content }}</{{ field.element_type }}>
		  {%- else -%}
		    {{ field.content }}
		  {%- endif %}
		  {%- if field.wrapper_element -%}
		    </{{ field.wrapper_element }}>
		  {%- endif %}
		{%- endfor %}
	</div>
</div>
