<div class="post-item">
	<a href="{{ fields.path.content|render|striptags|trim }}">
		<div class="post-image col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="date-post">
				<ul>
					<li>{{ fields.created.content }}</li>
					<li>{{ fields.created_1.content }}</li>
				</ul>
			</div>
			<div class="img">
				<img src="{{ fields.field_news_image.content|render|striptags|trim }}" alt="{{ fields.title.content|render|striptags|trim }}" />
			</div>
		</div>
	</a>
	<div class="post-info post-info2 col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="info">
			<ul class="more-info">
				<li>{% trans %}by{% endtrans %} : {{ fields.uid.content }}</li>
				<li>
					<i class="fa fa-comment-o"></i>
					<a href="javascript:void(0)">{% if node.comment.comment_count %} {{ node.comment.comment_count }} {% else %} 0 {% endif %} </a>
				</li>
				<li>
					<i class="fa fa-tag"></i>
					{{ fields.field_news_categories.content }}
				</li>
			</ul>
		</div>
		<a href="{{ fields.path.content|render|striptags|trim }}">
			<div class="title-post">
				{{ fields.title.content }}
			</div>
		</a>
		<div class="gray-desc">
			{{ fields.body.content }}
		</div>
		<span class="more">
			<a href="{{ fields.path.content|render|striptags|trim }}">{% trans %}View more{% endtrans %}<i class="fa fa-long-arrow-right"></i></a>
		</span>
	</div>
</div>