<div class="olay-gallery"></div>
<div class="gallery-image">
	<a href="{{ fields.path.content|render|striptags|trim }}">
		<img src="{{ fields.field_gallery_image.content|render|striptags|trim }}" alt="{{ fields.title.content|render|striptags|trim }}" /> 
	</a>
</div>
<div class="gallery-content">
	<div class="title-white">{{ fields.field_gallery_categories.content }}</div>
	<div class="title-bold-white">
		<a href="{{ fields.path.content|render|striptags|trim }}">{{ fields.title.content }}</a>
	</div>
	<div class="white-desc">
		{{ fields.field_gallery_desc.content }}
	</div>
	<div class="g-viewmore">
		<span class="view-more">
			<a href="{{ fields.path.content|render|striptags|trim }}">
				{% trans %} VIEW MORE {% endtrans %}<i class="fa fa-long-arrow-right"></i>
			</a>
		</span>
	</div>
</div>