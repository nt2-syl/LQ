<div class="film-odd-img">
	<a href="{{ fields.path.content|render|striptags|trim }}">
		<img src="{{ fields.field_image_couverture_paysage.content|render|striptags|trim }}" alt="{{ fields.title.content|render|striptags|trim }}" /> 
	</a>
	<div class="film-odd-view">
		<span class="view-more">
			<a href="{{ fields.path.content|render|striptags|trim }}">
